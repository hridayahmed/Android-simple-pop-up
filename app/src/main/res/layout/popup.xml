<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    android:layout_marginBottom="15dp">

    <LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/first"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jun 01, Thu"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:textColor="@color/mak"
        android:textSize="20dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bangladesh"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:textColor="@color/ban"
            android:layout_weight=".4"
            android:gravity="center"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:textColor="@color/mak"
            android:layout_weight=".2"
            android:gravity="center"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="England"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:textColor="@color/eng"
            android:layout_weight=".4"
            android:gravity="center"
            android:textSize="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="85dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thired"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="09:30 AM	GMT	/ 10:30 AM LOCAL"
            android:background="@color/white"
            android:textColor="@color/mak"
            android:gravity="center"
            android:textSize="20dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="115dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fourth"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kennington Oval, London"
            android:background="@color/white"
            android:textColor="@color/mak"
            android:gravity="center"
            android:textSize="20dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

    </LinearLayout>


</RelativeLayout>